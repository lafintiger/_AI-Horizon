# Heroku Production Environment Variables
# Copy these to your Heroku app's Config Vars

# Application Settings
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this

# Database Settings (Heroku will provide DATABASE_URL automatically)
# DATABASE_URL will be automatically set by Heroku Postgres addon

# AI/ML API Keys (Set these in Heroku Config Vars)
ANTHROPIC_API_KEY=your-anthropic-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Application Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,doc,docx,md

# Authentication Settings
SESSION_TIMEOUT_HOURS=8

# Cost Tracking
DEFAULT_BUDGET=100.0

# Data Collection Settings
DEFAULT_COLLECTION_LIMIT=50
MAX_ARTICLES_PER_CATEGORY=100

# Feature Flags
ENABLE_PDF_EXPORT=true
ENABLE_WISDOM_EXTRACTION=true
ENABLE_MULTICATEGORY=true

# Logging
LOG_LEVEL=INFO 